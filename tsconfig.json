{
  "include": ["src"],
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./lib/tsc",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./lib/types",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
